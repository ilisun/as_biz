<!-- start: page -->
<section class="body-sign">
  <div class="center-sign">
    <a href="/" class="logo pull-left">
      <img src="/assets/logo.png" height="35" alt="Porto Admin" />
    </a>

    <div class="panel panel-sign">
      <div class="panel-title-sign mt-xl text-right">
        <h2 class="title text-uppercase text-bold m-none"><i class="fa fa-user mr-xs"></i> Вход</h2>
      </div>
      <div class="panel-body">

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group mb-lg">
            <%= f.label :Имя_пользователя %>
            <div class="input-group input-group-icon">
              <%= f.text_field :username, autofocus: true, class: "form-control input-lg" %>
              <span class="input-group-addon">
                <span class="icon icon-lg">
                  <i class="fa fa-user"></i>
                </span>
              </span>
            </div>
          </div>

          <div class="form-group mb-lg">
            <%= f.label :Пароль %><br />
            <div class="input-group input-group-icon">
              <%= f.password_field :password, autocomplete: "off", class: "form-control input-lg" %>
              <span class="input-group-addon">
                <span class="icon icon-lg">
                  <i class="fa fa-lock"></i>
                </span>
              </span>
            </div>
          </div>

          <div class="row">
            <div class="col-sm-8">
              <% if devise_mapping.rememberable? %>
                <div class="checkbox-custom checkbox-default">
                  <%= f.check_box :remember_me, id: "RememberMe" %>
                  <%= f.label :Remember_me %>
                </div>
              <% end %>
            </div>
            <div class="col-sm-4 text-right">
              <%= f.submit "Вход", class: "btn btn-primary hidden-xs" %>
            </div>
          </div>

          <span class="mt-lg mb-lg line-thru text-center text-uppercase">
            <span>or</span>
          </span>
          <p class="text-center">У Вас нет учетной записи? <%= link_to "Регистрация", new_user_registration_path %>
        <% end %>

      </div>
    </div>
    <p class="text-center text-muted mt-md mb-md">&copy; Copyright 2014. All Rights Reserved.</p>
  </div>
</section>
<!-- end: page -->