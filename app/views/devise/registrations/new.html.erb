<!-- start: page -->
<section class="body-sign">
  <div class="center-sign">
    <a href="/" class="logo pull-left">
      <img src="/assets/logo.png" height="35" alt="Porto Admin" />
    </a>

    <div class="panel panel-sign">
      <div class="panel-title-sign mt-xl text-right">
        <h2 class="title text-uppercase text-bold m-none"><i class="fa fa-user mr-xs"></i> Sign Up</h2>
      </div>
      <div class="panel-body">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="form-group mb-lg">
            <%= f.label :Имя_пользователя %><br />
            <%= f.text_field :username, autofocus: true, class: "form-control input-lg" %>
          </div>

          <div class="form-group mb-none">
            <div class="row">
              <div class="col-sm-6 mb-lg">
                <%= f.label :Пароль %>
                <% if @validatable %>
                  <em>(<%= @minimum_password_length %> символов)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "off", class: "form-control input-lg" %>
              </div>
              <div class="col-sm-6 mb-lg">
                <div class="field">
                  <%= f.label :Повтор_пароля %><br />
                  <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-lg" %>
                </div>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-sm-8">
              <div class="checkbox-custom checkbox-default">
                <input id="AgreeTerms" name="agreeterms" type="checkbox"/>
                <label for="AgreeTerms">Я согласен с <a href="#">условиями</a></label>
              </div>
            </div>
            <div class="col-sm-4 text-right">
              <%= f.submit "Регистрация", class: "btn btn-primary hidden-xs" %>
            </div>
          </div>

          <span class="mt-lg mb-lg line-thru text-center text-uppercase">
            <span>or</span>
          </span>

          <p class="text-center">Вы уже зарегистрированы? <%= link_to "Вход", new_user_session_path %>

        <% end %>
      </div>
    </div>

    <p class="text-center text-muted mt-md mb-md">&copy; Copyright 2015. Все права защищены.</p>
  </div>
</section>
<!-- end: page -->