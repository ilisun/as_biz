<%= render 'page_header' %>

<div class="row">
  <div class="col-lg-12">
    <%= form_for @auto, :html => {class: 'form-horizontal'} do |f| %>
      <section class="panel">
        <header class="panel-heading">
          <h2 class="panel-title">Новое транспортное средство</h2>
        </header>
        <div class="panel-body">
          <h4 class="mb-xlg">Общая информация</h4>
          <fieldset>
            <div class="form-group">
              <label class="col-md-3 control-label" for="inputSuccess">Клиент <span class="required">*</span></label>
              <div class="col-md-6">
                <%= f.hidden_field :client_id %>
                <input type="text" class="form-control" id="auto_client_name">
              </div>
            </div>

            <div class="form-group">
              <label class="col-sm-3 control-label">Тип транспортного средства <span class="required">*</span></label>
              <div class="col-sm-9">
                <div class="radio-custom radio-primary">
                  <%= f.radio_button :type_auto, '0', 'data-radio' => 'radio-org', 'data-type' => 'one' %>
                  <%= f.label :type_auto, 'Автомобиль', :value => '0' %>
                </div>
                <div class="radio-custom radio-primary">
                  <%= f.radio_button :type_auto, '1', 'data-radio' => 'radio-org', 'data-type' => 'two' %>
                  <%= f.label :type_auto, 'Мотоцикл', :value => '1' %>
                </div>
              </div>

            </div>

          </fieldset>

          <fieldset class="all-content" id="fieldset-one-content">
            <%= render 'auto_car', :f => f %>
          </fieldset>

        </div>
        <footer class="panel-footer">
          <div class="row">
            <div class="col-sm-9 col-sm-offset-3">
              <%= f.submit "Сохранить", class: 'btn btn-primary' %>
              <%= link_to 'Назад', autos_path, class: "btn btn-default" %>
            </div>
          </div>
        </footer>
      </section>
    <% end %>
  </div>
</div>

<div class="modal fade" id="select_client" tabindex="-1" role="dialog" aria-labelledby="SelectClientModalLabel" aria-hidden="true">
  <div class="modal-block modal-block-primary">
    <section class="panel">
      <header class="panel-heading">
        <h2 class="panel-title">Registration Form</h2>
      </header>
      <div class="panel-body">
        <form id="demo-form" class="form-horizontal mb-lg" novalidate="novalidate">
          <div class="form-group mt-lg">
            <div class="col-sm-12">
              <input type="text" name="name" id="input_auto_select_client" class="form-control" placeholder="Введите имя..." required/>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-12">
              <select multiple="" id="area_auto_select_client" class="form-control">
              </select>
            </div>
          </div>

        </form>
      </div>
      <footer class="panel-footer">
        <div class="row">
          <div class="col-md-12 text-right">
            <button class="btn btn-primary modal-confirm" id="autos_modal_ok">Ок</button>
            <button class="btn btn-default" data-dismiss="modal">Закрыть</button>
          </div>
        </div>
      </footer>
    </section>
  </div>
</div>
