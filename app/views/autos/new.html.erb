<%= render 'page_header' %>

<div class="row">
  <div class="col-lg-12">
    <%= form_for @auto, :html => {class: 'form-horizontal'} do |f| %>
      <section class="panel">
        <header class="panel-heading">
          <h2 class="panel-title">Новое транспортное средство</h2>
        </header>
        <div class="panel-body">
          <h4 class="mb-xlg">Общая информация</h4>
          <fieldset>
            <div class="form-group">
              <label class="col-md-3 control-label" for="inputSuccess">Клиент <span class="required">*</span></label>
              <div class="col-md-6">
                <%= f.hidden_field :client_id %>
                <input type="text" class="form-control" id="auto_client_name">
              </div>
            </div>

            <div class="form-group">
              <label class="col-md-3 control-label" for="inputSuccess"></label>
              <div class="col-md-6">
                <%= link_to "Выбрать клиента", select_client_auto_path(f), remote: true, class: "modal-with-form btn btn-default" %>
              </div>
            </div>

            <div class="form-group">
              <label class="col-sm-3 control-label">Тип транспортного средства <span class="required">*</span></label>
              <div class="col-sm-9">
                <div class="radio-custom radio-primary">
                  <%= f.radio_button :type, '0', 'data-radio' => 'radio-org', 'data-type' => 'one' %>
                  <%= f.label :type, 'Автомобиль', :value => '0' %>
                </div>
                <div class="radio-custom radio-primary">
                  <%= f.radio_button :type, '1', 'data-radio' => 'radio-org', 'data-type' => 'two' %>
                  <%= f.label :type, 'Мотоцикл', :value => '1' %>
                </div>
              </div>

            </div>

          </fieldset>

          <fieldset class="all-content" id="fieldset-one-content">
            <%= render 'auto_car', :f => f %>
          </fieldset>

        </div>
        <footer class="panel-footer">
          <div class="row">
            <div class="col-sm-9 col-sm-offset-3">
              <%= f.submit "Сохранить", class: 'btn btn-primary' %>
              <%= link_to 'Назад', autos_path, class: "btn btn-default" %>
            </div>
          </div>
        </footer>
      </section>
    <% end %>
  </div>
</div>
