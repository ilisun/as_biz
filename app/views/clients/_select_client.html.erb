<div class="modal fade" id="select_client" tabindex="-1" role="dialog" aria-labelledby="SelectClientModalLabel" aria-hidden="true">
  <div class="modal-block modal-block-primary">
    <section class="panel">
      <header class="panel-heading">
        <h2 class="panel-title">Выбор клиента</h2>
      </header>
      <div class="panel-body">
        <form id="demo-form" class="form-horizontal mb-lg" novalidate="novalidate">
          <div class="form-group mt-lg">
            <div class="col-sm-12">
              <input type="text" name="name" id="input_select_client" class="form-control" placeholder="Введите имя..." required/>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-12">
              <select multiple="" id="area_select_client" class="form-control">
              </select>
            </div>
          </div>
        </form>
      </div>
      <footer class="panel-footer">
        <div class="row">
          <div class="col-md-12 text-right">
            <%= link_to new_client_path do %>
              <button type="button" class="mb-xs mt-xs mr-xs btn btn-default"><i class="fa fa-plus-circle"></i>&nbsp&nbspДобавить клиента</button>
            <% end %>
            <button class="btn btn-primary modal-confirm" id="autos_modal_ok">Ок</button>
            <button class="btn btn-warning" data-dismiss="modal">Закрыть</button>
          </div>
        </div>
      </footer>
    </section>
  </div>
</div>