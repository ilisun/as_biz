<%= render 'page_header' %>

<div class="row">
  <div class="col-lg-12">
      <%= form_for @client, :html => {class: 'form-horizontal'} do |f| %>
        <section class="panel">
          <header class="panel-heading">
            <h2 class="panel-title">Новый клиент</h2>
          </header>
          <div class="panel-body">
            <h4 class="mb-xlg">Общая информация</h4>
            <fieldset>
              <div class="form-group">
                <label class="col-sm-3 control-label">Категория покупателя <span class="required">*</span></label>
                <div class="col-sm-9">
                  <div class="radio-custom radio-primary">
                    <%= f.radio_button :category, '0' %>
                    <%= f.label :category, 'розница', :value => '0' %>
                  </div>
                  <div class="radio-custom radio-primary">
                    <%= f.radio_button :category, '1' %>
                    <%= f.label :category, 'опт', :value => '1' %>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-3 control-label">Организационно-правовая форма <span class="required">*</span></label>
                <div class="col-sm-9">
                  <div class="radio-custom radio-primary">
                    <%= f.radio_button :type_structure, '0', 'data-radio' => 'radio-org', 'data-type' => 'one' %>
                    <%= f.label :type_structure, 'юридическое лицо (ООО, ОАО/ЗАО, ПАО/НАО)', :value => '0' %>
                  </div>
                  <div class="radio-custom radio-primary">
                    <%= f.radio_button :type_structure, '1', 'data-radio' => 'radio-org', 'data-type' => 'two' %>
                    <%= f.label :type_structure, 'индивидуальный предприниматель (ИП)', :value => '1' %>
                  </div>
                  <div class="radio-custom radio-primary">
                    <%= f.radio_button :type_structure, '2', 'data-radio' => 'radio-org', 'data-type' => 'three' %>
                    <%= f.label :type_structure, 'физическое лицо', :value => '2' %>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <label class="col-md-3 control-label" for="inputSuccess">Страна / Населенный пункт <span class="required">*</span></label>
                <div class="col-md-6">
                  <%= f.collection_select :country_id, Country.all, :id, :name, {:prompt => 'Выберите страну...'}, {:class => 'form-control mb-md'} %>
                  <%= f.grouped_collection_select :city_id, Country.all, :cities, :name, :id, :name, {:prompt => 'Выберите город...'}, {:class => 'form-control populate', 'data-plugin-selectTwo' => '', 'data-plugin-options' => '{ "minimumInputLength": 2 }'} %>
                </div>
              </div>
              <div class="form-group">
                <label class="col-md-3 control-label" for="inputSuccess">Сфера деятельности <span class="required">*</span></label>
                <div class="col-md-6">
                  <%= f.select :service, [['частное лицо'], ['автосервис'], ['интернет-магазин'], ['магазин автозапчастей'], ['прочее']], {:include_blank => true}, {:class => 'form-control mb-md'} %>
                </div>
              </div>
              <div class="form-group">
                <label class="col-md-3 control-label" for="inputSuccess">Канал привлечения <span class="required">*</span></label>
                <div class="col-md-6">
                  <%= f.select :attraction, [['интернет поиск'], ['интернет реклама'], ['реклама на улице'], ['работали ранее'], ['рекомендовали']], {:include_blank => true}, {:class => 'form-control mb-md'} %>
                </div>
              </div>
              <div class="form-group">
                <label class="col-md-3 control-label" for="inputSuccess">Комментарии</label>
                <div class="col-md-6">
                  <%= f.text_area :comment, class: 'form-control', 'data-plugin-textarea-autosize' => '' %>
                </div>
              </div>
            </fieldset>

            <fieldset class="all-content" id="fieldset-one-content">
              <%= render 'client_entity', :f => f %>
            </fieldset>

            <fieldset class="all-content" id="fieldset-two-content">
              <%= render 'client_individual_entrep', :f => f %>
            </fieldset>

            <fieldset class="all-content" id="fieldset-three-content">
              <%= render 'client_individual', :f => f %>
            </fieldset>

          </div>
          <footer class="panel-footer">
            <div class="row">
              <div class="col-sm-9 col-sm-offset-3">
                <%= f.submit "Сохранить", class: 'btn btn-primary' %>
                <%= link_to 'Назад', clients_path, class: "btn btn-default" %>
              </div>
            </div>
          </footer>
        </section>
      <% end %>
  </div>
</div>

<div class="col-md-12 col-lg-3">

</div>

</div>