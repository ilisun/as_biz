<%= f.fields_for :client_individual do |ff| %>
  <hr class="dotted tall">
  <h4 class="mb-xlg">Контактная информация</h4>
  <div class="form-group">
    <label class="col-md-3 control-label" for="inputSuccess">Фамилия <span class="required">*</span></label>
    <div class="col-md-6">
      <%= ff.text_field :last_name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-3 control-label" for="inputSuccess">Имя <span class="required">*</span></label>
    <div class="col-md-6">
      <%= ff.text_field :first_name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-3 control-label" for="inputSuccess">Отчество <span class="required">*</span></label>
    <div class="col-md-6">
      <%= ff.text_field :middle_name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-3 control-label" for="inputSuccess">Пол <span class="required">*</span></label>
    <div class="col-md-6">
      <%= ff.select :gender, [['мужской'], ['женский']], {:include_blank => true}, {:class => 'form-control mb-md'} %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-3 control-label" for="inputSuccess">Дата рождения <span class="required">*</span></label>
    <div class="col-md-6">
      <div class="input-group">
        <span class="input-group-addon">
          <i class="fa fa-calendar"></i>
        </span>
        <%= ff.text_field :birthday, class: 'form-control', id: 'date', 'data-plugin-masked-input' => '', 'data-input-mask' => '99/99/9999', :placeholder => '__/__/____' %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-3 control-label" for="inputSuccess">Основной телефон <span class="required">*</span></label>
    <div class="col-md-6 control-label">
      <div class="input-group">
        <span class="input-group-addon">
          <i class="fa fa-phone"></i>
        </span>
        <%= ff.text_field :phone, class: 'form-control', 'data-plugin-masked-input' => '', 'data-input-mask' => '(999) 999-99-99', :placeholder => '(123) 123-12-34' %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-3 control-label" for="inputSuccess">Дополнительный телефон</label>
    <div class="col-md-6 control-label">
      <div class="input-group">
        <span class="input-group-addon">
          <i class="fa fa-phone"></i>
        </span>
        <%= ff.text_field :alt_phone, class: 'form-control', 'data-plugin-masked-input' => '', 'data-input-mask' => '(999) 999-99-99', :placeholder => '(123) 123-12-34' %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-3 control-label" for="inputSuccess">Факс</label>
    <div class="col-md-6 control-label">
      <div class="input-group">
        <span class="input-group-addon">
          <i class="fa fa-phone"></i>
        </span>
        <%= ff.text_field :fax, class: 'form-control', 'data-plugin-masked-input' => '', 'data-input-mask' => '(999) 999-99-99', :placeholder => '(123) 123-12-34' %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-3 control-label" for="inputSuccess">E-mail</label>
    <div class="col-md-6">
      <%= ff.email_field :email, class: 'form-control' %>
    </div>
  </div>
<% end %>