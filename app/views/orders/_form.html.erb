<div class="row">
  <div class="col-lg-12">
    <%= form_for @order, :html => {class: 'form-horizontal'} do |f| %>
      <section class="panel">
        <header class="panel-heading">
          <h2 class="panel-title">Новый заказ</h2>
        </header>
        <div class="panel-body">
          <h4 class="mb-xlg">Общая информация</h4>
          <fieldset>
            <div class="form-group">
              <label class="col-md-3 control-label" for="inputSuccess">Клиент <span class="required">*</span></label>
              <div class="col-md-6">
                <%= f.hidden_field :client_id %>
                <input type="text" class="form-control" id="order_client_name">
              </div>
            </div>
            <div class="form-group">
              <%= f.label 'Номер заказа', class: 'col-md-3 control-label' %>
              <div class="col-md-6">
                <%= f.text_field :number, :readonly => true, class: 'form-control' %>
              </div>
            </div>
          </fieldset></br>

          <fieldset id="products">
            <%= f.fields_for :products do |ff| %>
              <%= render 'product_fields', :f => ff %>
            <% end %>

            <div class="form-group">
              <%= link_to_add_association f, :products do %>
                <div class="col-md-3 control-label"></div>
                <div class="col-md-6">
                  <button type="button" class="mb-xs mt-xs mr-xs btn btn-success"><i class="fa fa-wrench" style="font-size: 18px;"></i> Добавить запчасть</button>
                </div>
              <% end %>
            </div>
          </fieldset>
        </div>
        <footer class="panel-footer">
          <div class="row">
            <div class="col-sm-9 col-sm-offset-3">
              <%= f.submit "Сохранить", class: 'btn btn-primary' %>
              <%= link_to 'Назад', orders_path, class: "btn btn-default" %>
            </div>
          </div>
        </footer>
      </section>
    <% end %>
  </div>
</div>

<%= render 'clients/select_client' %>